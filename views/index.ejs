<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title><%= __('web title') %></title>
  <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/blog-home.css" rel="stylesheet">
</head>

<body>
  <!-- Page Content -->
  <div id="cart-app" class="container">
    <nav-bar></nav-bar>
    <div class="row">
      <div class="col-md-8">
        <h1 class="page-header"><%= __('web title') %></small></h1>
        <product-item :filter-items="filterItems" :items="items" :type="type" :begin-item="beginItem" :end-item="endItem" @update-add-cart="addItem"></product-item>

        <hr>
        <!--Pager -->
        <pagination :pages="pages" :items="items" :current-page="currentPage" @update-show-item="chagneShowItem" @update-previous="changePrevious" @update-next="changeNext" @update-switch-page="changeSwitchPage"></pagination>

      </div>

      <!-- Blog Sidebar Widgets Column -->
      <div class="col-md-4 ">

        <div class="well ">
          <h4>商品搜尋</h4>
          <div class="input-group ">
            <input type="text" class="form-control" v-model="searchName">
            <span class="input-group-btn">
                <button class="btn btn-default" @click="search"><span class="glyphicon glyphicon-search "></span></button>
            </span>
          </div>
          <!-- /.input-group -->
        </div>

        <hr>

        <div class="well cart">
          <h4><%= __('carts') %></h4>

          <ul class="itemsInCart ">
            <li v-for="cartProduct in carts" :key="cartProduct.index">
              <div class="cart-item">
                <div class="cart-title">{{ cartProduct.name }}</div> <span class="price">{{ cartProduct.price }}</span> x
                <span class="count">{{ cartProduct.count }}</span>
                <div class="handler"><a href="#" class="cart-btn plus" @click.prevent="cartProduct.count++">+</a> <a href="#" class="cart-btn minus" @click.prevent="remove(cartProduct)">-</a></div>
              </div>
            </li>
          </ul>
          <hr>
          <p><%= __('amount') %>： <span>${{ amount }}</span></p>
          <p>
            <button type="button" class="btn btn-primary" @click="checkout"><%= __('checkout') %></button>
          </p>

        </div>

      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
  <script src="https://unpkg.com/vue@2.3.4/dist/vue.min.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/javascripts/jquery.js"></script>
  <script src="/javascripts/shopCarts.js"></script>

</body>

</html>